@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Bootstrap,Admin,Template,Open,Source,jQuery,CSS,HTML,RWD,Dashboard">
    <title>CoreUI Pro Bootstrap Admin Template</title>
    <!-- Icons-->
    <link href="~/Areas/Admin/assets/vendors/@Html.Raw("@coreui")/icons/css/coreui-icons.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendors/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/vendors/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="~/Areas/Admin/assets/css/style.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/vendors/pace-progress/css/pace.min.css" rel="stylesheet">
</head>
<body class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1>Login</h1>
                            <p class="text-muted">Sign In to your account</p>
                            <form action="/Admin/Account/Login" method="post">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" name="username" type="text" placeholder="Username" autocomplete="off">
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-lock"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" name="password" type="password" placeholder="Password" autocomplete="off">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Login</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <button class="btn btn-link px-0" type="button">Forgot password?</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap and necessary plugins-->
    <script src="~/Areas/Admin/assets/vendors/jquery/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/assets/vendors/popper.js/js/popper.min.js"></script>
    <script src="~/Areas/Admin/assets/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/vendors/pace-progress/js/pace.min.js"></script>
    <script src="~/Areas/Admin/assets/vendors/perfect-scrollbar/js/perfect-scrollbar.min.js"></script>
    <script src="~/Areas/Admin/assets/vendors/@Html.Raw("@coreui")/coreui-pro/js/coreui.min.js"></script>
</body>
</html>